#!/bin/bash
set -euo pipefail

# ========================================================
# RYZEN 9 VM MANAGER - ULTIMATE CUSTOM VERSION
# ========================================================

VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

# OS তালিকা (এখান থেকে আপনি OS সিলেক্ট করতে পারবেন)
declare -A OS_LIST=(
    ["1"]="Ubuntu 22.04|https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
    ["2"]="Ubuntu 24.04|https://cloud-images.ubuntu.com/noble/current/noble-server-cloudimg-amd64.img"
    ["3"]="Debian 12|https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2"
    ["4"]="Fedora 40|https://download.fedoraproject.org/pub/fedora/linux/releases/40/Cloud/x86_64/images/Fedora-Cloud-Base-40-1.14.x86_64.qcow2"
)

display_header() {
    clear
    echo "=========================================================="
    echo "    RYZEN 9 VM MANAGER - ADVANCED CONTROL (ENG)"
    echo "=========================================================="
}

list_vms() {
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
    if [ ${#vms[@]} -eq 0 ]; then
        echo "No VMs found!"
        return 1
    fi
    echo "Total VMs found: ${#vms[@]}"
    echo "--------------------------------"
    for i in "${!vms[@]}"; do
        echo "$((i+1))) ${vms[$i]}"
    done
    echo "--------------------------------"
    return 0
}

create_new_vm() {
    display_header
    echo "[CREATE NEW VM]"
    
    # OS Selection Option
    echo "Select Operating System:"
    for key in $(echo "${!OS_LIST[@]}" | tr ' ' '\n' | sort); do
        echo "$key) ${OS_LIST[$key]%%|*}"
    done
    read -p "Choice (1-4): " os_choice
    
    OS_NAME=${OS_LIST[$os_choice]%%|*}
    IMG_URL=${OS_LIST[$os_choice]#*|}

    read -p "1. VM File Name (e.g. vps1): " VM_NAME
    read -p "2. Hostname: " HOSTNAME
    read -p "3. Username: " USERNAME
    read -p "4. Password: " PASSWORD
    read -p "5. RAM (MB) [2048]: " MEMORY
    MEMORY=${MEMORY:-2048}
    read -p "6. CPU Cores [2]: " CPUS
    CPUS=${CPUS:-2}
    read -p "7. Disk Size (e.g. 20G): " DISK_SIZE
    read -p "8. SSH Port [3000]: " SSH_PORT
    SSH_PORT=${SSH_PORT:-3000}

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"

    if [[ ! -f "$IMG_FILE" ]]; then
        echo "Downloading $OS_NAME Image..."
        wget -q --show-progress "$IMG_URL" -O "$IMG_FILE"
    fi

    echo "Configuring Disk..."
    qemu-img resize "$IMG_FILE" "$DISK_SIZE"

    # Cloud-init setup
    cat > user-data <<EOC
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    passwd: $(openssl passwd -6 "$PASSWORD")
chpasswd:
  list: |
    root:$PASSWORD
    $USERNAME:$PASSWORD
  expire: false
EOC
    echo "instance-id: iid-$VM_NAME" > meta-data
    cloud-localds "$SEED_FILE" user-data meta-data
    rm user-data meta-data

    # Save Config
    cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
MEMORY="$MEMORY"
CPUS="$CPUS"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
OS_NAME="$OS_NAME"
EOC
    echo "Success: VM Created!"
    sleep 2
}

start_vm() {
    display_header
    if list_vms; then
        read -p "Enter VM number to start: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        if [[ "$idx" =~ ^[0-9]+$ ]] && [ "$idx" -le "${#vms[@]}" ] && [ "$idx" -gt 0 ]; then
            SELECTED_VM="${vms[$((idx-1))]}"
            source "$VM_DIR/$SELECTED_VM.conf"
            
            # Port Check
            if ss -tln | grep -q ":$SSH_PORT "; then
                echo "ERROR: Port $SSH_PORT is busy!"
                read -p "Press Enter..."
                return
            fi

            echo "Starting $VM_NAME (Ryzen 9 Mode)..."
            
            # Auto KVM/TCG Detection
            local ACCEL="tcg"
            if [ -e /dev/kvm ]; then ACCEL="kvm"; fi

            qemu-system-x86_64 \
                -accel "$ACCEL" \
                -m "$MEMORY" \
                -smp "$CPUS" \
                -cpu host,vendor=AuthenticAMD,model_id="AMD Ryzen 9 5950X 16-Core Processor" \
                -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
                -drive "file=$SEED_FILE,format=raw,if=virtio" \
                -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
                -device virtio-net-pci,netdev=n1 \
                -nographic -serial mon:stdio
        else
            echo "Invalid Selection!"
            sleep 2
        fi
    fi
}

edit_vm() {
    display_header
    if list_vms; then
        read -p "Enter VM number to edit: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        if [[ "$idx" =~ ^[0-9]+$ ]] && [ "$idx" -le "${#vms[@]}" ] && [ "$idx" -gt 0 ]; then
            SELECTED_VM="${vms[$((idx-1))]}"
            source "$VM_DIR/$SELECTED_VM.conf"
            
            echo "Editing $VM_NAME (Leave blank to keep current value)"
            read -p "New Hostname [$HOSTNAME]: " n_host
            read -p "New RAM [$MEMORY]: " n_mem
            read -p "New CPU Cores [$CPUS]: " n_cpu
            read -p "New SSH Port [$SSH_PORT]: " n_port
            read -p "New Password [$PASSWORD]: " n_pass

            HOSTNAME=${n_host:-$HOSTNAME}
            MEMORY=${n_mem:-$MEMORY}
            CPUS=${n_cpu:-$CPUS}
            SSH_PORT=${n_port:-$SSH_PORT}
            PASSWORD=${n_pass:-$PASSWORD}

            cat > "$VM_DIR/$SELECTED_VM.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
MEMORY="$MEMORY"
CPUS="$CPUS"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
OS_NAME="$OS_NAME"
EOC
            echo "Update Successful!"
            sleep 2
        else
            echo "Invalid Selection!"
            sleep 2
        fi
    fi
}

delete_vm() {
    display_header
    if list_vms; then
        read -p "Enter VM number to DELETE: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        if [[ "$idx" =~ ^[0-9]+$ ]] && [ "$idx" -le "${#vms[@]}" ] && [ "$idx" -gt 0 ]; then
            SELECTED_VM="${vms[$((idx-1))]}"
            source "$VM_DIR/$SELECTED_VM.conf"
            
            read -p "Are you sure you want to delete $SELECTED_VM? (y/n): " confirm
            if [[ "$confirm" == "y" ]]; then
                rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$SELECTED_VM.conf"
                echo "VM Deleted Successfully!"
            else
                echo "Deletion Cancelled."
            fi
            sleep 2
        fi
    fi
}

# MAIN MENU
while true; do
    display_header
    echo "1) Create New VM (Ubuntu/Debian/Fedora)"
    echo "2) Show VM List & Info"
    echo "3) Start VM (Ryzen 9 Mode)"
    echo "4) Edit VM Configuration (Full Edit)"
    echo "5) Delete VM"
    echo "6) Exit"
    echo "--------------------------------"
    read -p "Select Option: " opt
    case $opt in
        1) create_new_vm ;;
        2) display_header; list_vms; read -p "Press Enter..." ;;
        3) start_vm ;;
        4) edit_vm ;;
        5) delete_vm ;;
        6) exit 0 ;;
        *) echo "Invalid Option!" ; sleep 1 ;;
    esac
done
}

edit_vm() {
    display_header
    if list_vms; then
        read -p "Select VM Number to Edit: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        source "$VM_DIR/${vms[$((idx-1))]}.conf"
        
        echo "Editing $VM_NAME (Leave blank to keep current)"
        read -p "New Hostname [$HOSTNAME]: " n_host
        read -p "New RAM [$MEMORY]: " n_mem
        read -p "New CPU Cores [$CPUS]: " n_cpu
        read -p "New SSH Port [$SSH_PORT]: " n_port
        read -p "New Password [$PASSWORD]: " n_pass

        HOSTNAME=${n_host:-$HOSTNAME}
        MEMORY=${n_mem:-$MEMORY}
        CPUS=${n_cpu:-$CPUS}
        SSH_PORT=${n_port:-$SSH_PORT}
        PASSWORD=${n_pass:-$PASSWORD}

        cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
MEMORY="$MEMORY"
CPUS="$CPUS"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
        echo "Update Successful!"
        sleep 2
    fi
}

while true; do
    display_header
    echo "1) Create New VM (OS Menu)"
    echo "2) Start VM (Ryzen 9)"
    echo "3) Edit VM (Full Access)"
    echo "4) Delete VM"
    echo "5) Exit"
    read -p "Select: " opt
    case $opt in
        1) create_new_vm ;;
        2) start_vm ;;
        3) edit_vm ;;
        4) if list_vms; then read -p "Number to delete: " i; local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null)); rm -f "$VM_DIR/${vms[$((i-1))]}.img" "$VM_DIR/${vms[$((i-1))]}-seed.iso" "$VM_DIR/${vms[$((i-1))]}.conf"; echo "Deleted!"; fi ;;
        5) exit 0 ;;
    esac
done
