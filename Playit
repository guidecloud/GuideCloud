#!/bin/bash
# Playit installation script - Auto Installer Made by <3 B1 
# Tested on Ubuntu/Debian by B1
# made by GuideCloud

set -e

echo "=== B1: Updating system ==="
sudo apt update -y && sudo apt upgrade -y

echo "=== B1: Installing required dependencies ==="
sudo apt install -y sudo curl gpg

echo "=== B1: Adding Playit APT repository ==="
curl -fsSL https://playit-cloud.github.io/ppa/key.gpg | \
  gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/playit.gpg >/dev/null

echo "deb [signed-by=/etc/apt/trusted.gpg.d/playit.gpg] https://playit-cloud.github.io/ppa/data ./" | \
  sudo tee /etc/apt/sources.list.d/playit-cloud.list

echo "=== B1: Updating package list ==="
sudo apt update -y

echo "=== B1: Installing Playit ==="
sudo apt install -y playit

echo "=== B1: Enabling Playit service ==="
sudo systemctl enable --now playit

echo "=== B1: Running Playit setup ==="
playit setup

echo "✅ guidecloud: Playit installation complete!"
echo "➡️ guidecloud: Run 'playit status' to check the tunnel status."
