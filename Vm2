#!/bin/bash
set -euo pipefail

# ========================================================
# GUIDECLOUD ULTIMATE VM MANAGER (RYZEN 9 ENABLED)
# ========================================================

VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

display_header() {
    clear
    echo "=========================================================="
    echo "    RYZEN 9 VM MANAGER - FULL CONTROL & INFO"
    echo "=========================================================="
}

# VM তালিকা দেখানোর ফাংশন
list_vms() {
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \;))
    if [ ${#vms[@]} -eq 0 ]; then
        echo "কোনো VM পাওয়া যায়নি!"
        return 1
    fi
    echo "বর্তমানে থাকা VM-এর তালিকা:"
    for i in "${!vms[@]}"; do
        echo "$((i+1))) ${vms[$i]}"
    done
    return 0
}

# নির্দিষ্ট VM লোড করার ফাংশন
get_vm_by_index() {
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \;))
    read -p "VM নাম্বারটি দিন: " idx
    if [[ "$idx" =~ ^[0-9]+$ ]] && [ "$idx" -le "${#vms[@]}" ] && [ "$idx" -gt 0 ]; then
        SELECTED_VM="${vms[$((idx-1))]}"
        source "$VM_DIR/$SELECTED_VM.conf"
        return 0
    else
        echo "ভুল নাম্বার!"
        return 1
    fi
}

create_new_vm() {
    display_header
    read -p "VM এর নাম দিন: " VM_NAME
    read -p "ইউজার নেম দিন: " USERNAME
    read -p "পাসওয়ার্ড দিন: " PASSWORD
    read -p "র‍্যাম (MB): " MEMORY
    read -p "সিপিইউ কোর: " CPUS
    read -p "স্টোরেজ (যেমন 20G): " DISK_SIZE
    read -p "SSH পোর্ট (যেমন 3000): " SSH_PORT

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"

    echo "ইমেজ তৈরি হচ্ছে..."
    if [[ ! -f "$IMG_FILE" ]]; then
        wget -q --show-progress https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img -O "$IMG_FILE"
    fi
    qemu-img resize "$IMG_FILE" "$DISK_SIZE"

    cat > user-data <<EOF
#cloud-config
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    password: $(openssl passwd -6 "$PASSWORD")
EOF
    echo "instance-id: iid-$VM_NAME" > meta-data
    cloud-localds "$SEED_FILE" user-data meta-data
    rm user-data meta-data

    # কনফিগ সেভ
    cat > "$VM_DIR/$VM_NAME.conf" <<EOF
VM_NAME="$VM_NAME"
MEMORY="$MEMORY"
CPUS="$CPUS"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOF
    echo "VM তৈরি সফল হয়েছে!"
    sleep 2
}

show_info() {
    display_header
    if list_vms; then
        if get_vm_by_index; then
            echo "--------------------------------"
            echo "VM নাম: $VM_NAME"
            echo "ইউজার: $USERNAME"
            echo "পাসওয়ার্ড: $PASSWORD"
            echo "র‍্যাম: $MEMORY MB | সিপিইউ: $CPUS Core"
            echo "SSH পোর্ট: $SSH_PORT"
            echo "ডাউনলোড লিঙ্ক: ssh $USERNAME@localhost -p $SSH_PORT"
            echo "--------------------------------"
            read -p "ফিরে যেতে এন্টার চাপুন..."
        fi
    fi
}

start_vm() {
    display_header
    if list_vms; then
        if get_vm_by_index; then
            echo "Starting $VM_NAME as Ryzen 9..."
            qemu-system-x86_64 \
                -enable-kvm \
                -m "$MEMORY" \
                -smp "$CPUS" \
                -cpu EPYC,vendor=AuthenticAMD,model-id="AMD Ryzen 9 5950X 16-Core Processor" \
                -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
                -drive "file=$SEED_FILE,format=raw,if=virtio" \
                -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
                -device virtio-net-pci,netdev=n1 \
                -nographic -serial mon:stdio
        fi
    fi
}

delete_vm() {
    display_header
    if list_vms; then
        if get_vm_by_index; then
            rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$SELECTED_VM.conf"
            echo "VM ডিলিট হয়েছে!"
            sleep 2
        fi
    fi
}

# মেইন মেনু
while true; do
    display_header
    echo "1) Create New VM"
    echo "2) Start VM (Ryzen 9 Mode)"
    echo "3) Show VM Info"
    echo "4) Delete VM"
    echo "5) Exit"
    read -p "বিকল্প বেছে নিন: " opt
    case $opt in
        1) create_new_vm ;;
        2) start_vm ;;
        3) show_info ;;
        4) delete_vm ;;
        5) exit 0 ;;
    esac
done

