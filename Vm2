#!/bin/bash
set -euo pipefail

# ========================================================================
#   RYZEN 9 PRO VM MANAGER (KVM OPTIMIZED)
# ========================================================================

VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

# OS Selection
declare -A OS_OPTIONS=(
    ["1"]="Ubuntu 22.04|https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
    ["2"]="Ubuntu 24.04|https://cloud-images.ubuntu.com/noble/current/noble-server-cloudimg-amd64.img"
    ["3"]="Debian 12|https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2"
    ["4"]="Fedora 40|https://download.fedoraproject.org/pub/fedora/linux/releases/40/Cloud/x86_64/images/Fedora-Cloud-Base-40-1.14.x86_64.qcow2"
)

display_header() {
    clear
    echo "=========================================================="
    echo "    RYZEN 9 VM MANAGER - KVM STABLE VERSION"
    echo "=========================================================="
}

list_vms() {
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
    if [ ${#vms[@]} -eq 0 ]; then echo "No VMs found!"; return 1; fi
    echo "Current VMs:"
    for i in "${!vms[@]}"; do echo "$((i+1))) ${vms[$i]}"; done
    return 0
}

create_new_vm() {
    display_header
    echo "[1] Select OS:"
    for key in $(echo "${!OS_OPTIONS[@]}" | tr ' ' '\n' | sort); do
        echo "$key) ${OS_OPTIONS[$key]%%|*}"
    done
    read -p "Choice: " os_choice
    IMG_URL=${OS_OPTIONS[$os_choice]#*|}

    echo -e "\n[2] Config:"
    read -p "VM Name: " VM_NAME
    read -p "Hostname: " HOSTNAME
    read -p "Username: " USERNAME
    read -p "Password: " PASSWORD
    read -p "RAM (MB): " MEMORY
    read -p "CPU Cores: " CPUS
    read -p "Clock Speed (GHz) [e.g. 4.4]: " CPU_GHZ
    read -p "Disk Size (e.g. 20G): " DISK_SIZE
    if [[ ! "$DISK_SIZE" =~ [GgMm]$ ]]; then DISK_SIZE="${DISK_SIZE}G"; fi
    read -p "SSH Port: " SSH_PORT

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"

    if [[ ! -f "$IMG_FILE" ]]; then
        wget -q --show-progress "$IMG_URL" -O "$IMG_FILE"
    fi
    qemu-img resize "$IMG_FILE" "$DISK_SIZE"

    # Cloud-init
    cat > user-data <<EOC
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    passwd: $(openssl passwd -6 "$PASSWORD")
EOC
    cloud-localds "$SEED_FILE" user-data
    rm user-data

    # Save Config
    cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
MEMORY="$MEMORY"
CPUS="$CPUS"
CPU_GHZ="$CPU_GHZ"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
}

start_vm() {
    display_header
    if list_vms; then
        read -p "Select VM Number: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        source "$VM_DIR/${vms[$((idx-1))]}.conf"

        echo "Starting $VM_NAME (Ryzen 9 Mode)..."
        # STABLE KVM COMMAND - GHz এরর ফিক্স করতে CPU টাইপ 'host' রাখা হয়েছে
        qemu-system-x86_64 \
            -enable-kvm \
            -cpu host,vendor=AuthenticAMD,model_id="AMD Ryzen 9 5950X 16-Core Processor @ ${CPU_GHZ}GHz" \
            -m "$MEMORY" \
            -smp "$CPUS" \
            -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
            -drive "file=$SEED_FILE,format=raw,if=virtio" \
            -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
            -device virtio-net-pci,netdev=n1 \
            -nographic -serial mon:stdio
    fi
}

edit_vm() {
    display_header
    if list_vms; then
        read -p "Number to edit: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        source "$VM_DIR/${vms[$((idx-1))]}.conf"
        
        read -p "New Hostname [$HOSTNAME]: " n_host
        read -p "New RAM [$MEMORY]: " n_mem
        read -p "New CPUS [$CPUS]: " n_cpu
        read -p "New GHz [$CPU_GHZ]: " n_ghz
        read -p "New Port [$SSH_PORT]: " n_port
        read -p "New Pass [$PASSWORD]: " n_pass

        cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="${n_host:-$HOSTNAME}"
USERNAME="$USERNAME"
PASSWORD="${n_pass:-$PASSWORD}"
MEMORY="${n_mem:-$MEMORY}"
CPUS="${n_cpu:-$CPUS}"
CPU_GHZ="${n_ghz:-$CPU_GHZ}"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="${n_port:-$SSH_PORT}"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
        echo "Updated!"
        sleep 1
    fi
}

while true; do
    display_header
    echo "1) Create VM (OS Menu)"
    echo "2) Start VM (Ryzen 9)"
    echo "3) Edit VM (Full Access)"
    echo "4) Delete VM"
    echo "5) Exit"
    read -p "Select: " opt
    case $opt in
        1) create_new_vm ;;
        2) start_vm ;;
        3) edit_vm ;;
        4) if list_vms; then read -p "Select: " i; local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null)); rm -f "$VM_DIR/${vms[$((i-1))]}.img" "$VM_DIR/${vms[$((i-1))]}-seed.iso" "$VM_DIR/${vms[$((i-1))]}.conf"; echo "Deleted!"; fi ;;
        5) exit 0 ;;
    esac
done
            -smp "$CPUS" \
            -cpu host,vendor=AuthenticAMD,model_id="AMD Ryzen 9 5950X 16-Core Processor @ ${CPU_GHZ}GHz" \
            -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
            -drive "file=$SEED_FILE,format=raw,if=virtio" \
            -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
            -device virtio-net-pci,netdev=n1 \
            -nographic -serial mon:stdio
    fi
}

edit_vm() {
    display_header
    if list_vms; then
        read -p "Enter VM number to EDIT: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        source "$VM_DIR/${vms[$((idx-1))]}.conf"
        
        echo "Editing $VM_NAME (Press Enter to keep current value)"
        read -p "New Hostname [$HOSTNAME]: " n_host
        read -p "New RAM [$MEMORY]: " n_mem
        read -p "New CPU Cores [$CPUS]: " n_cpu
        read -p "New GHz [$CPU_GHZ]: " n_ghz
        read -p "New SSH Port [$SSH_PORT]: " n_port
        read -p "New Password [$PASSWORD]: " n_pass

        HOSTNAME=${n_host:-$HOSTNAME}
        MEMORY=${n_mem:-$MEMORY}
        CPUS=${n_cpu:-$CPUS}
        CPU_GHZ=${n_ghz:-$CPU_GHZ}
        SSH_PORT=${n_port:-$SSH_PORT}
        PASSWORD=${n_pass:-$PASSWORD}

        cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
MEMORY="$MEMORY"
CPUS="$CPUS"
CPU_GHZ="$CPU_GHZ"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
        echo "Configuration Updated!"
        sleep 2
    fi
}

while true; do
    display_header
    echo "1) Create New VM"
    echo "2) Start VM (Pure KVM)"
    echo "3) Edit VM (Full Access)"
    echo "4) Delete VM"
    echo "5) Exit"
    read -p "Select Choice: " opt
    case $opt in
        1) create_new_vm ;;
        2) start_vm ;;
        3) edit_vm ;;
        4) if list_vms; then read -p "Number to delete: " i; local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null)); rm -f "$VM_DIR/${vms[$((i-1))]}.img" "$VM_DIR/${vms[$((i-1))]}-seed.iso" "$VM_DIR/${vms[$((i-1))]}.conf"; echo "Deleted!"; fi ;;
        5) exit 0 ;;
    esac
done
