#!/bin/bash
set -euo pipefail

# =============================
# Enhanced Multi-VM Manager (RYZEN 9 FULL VERSION)
# =============================

VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

declare -A OS_OPTIONS=(
    ["Ubuntu 22.04"]="Ubuntu|jammy|https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img|ubuntu-vps|admin|password123"
    ["Debian 12"]="Debian|bookworm|https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2|debian-vps|admin|password123"
)

display_header() {
    clear
    cat << "EOF"
========================================================================
  _    _  ____  _____ _____ _   _  _____ ____   ______     ________
 POWERED BY GUIDECLOUD (RYZEN 9 ENABLED)
========================================================================
EOF
    echo
}

print_status() {
    local type=$1
    local message=$2
    case $type in
        "INFO") echo -e "\033[1;34m[INFO]\033[0m $message" ;;
        "SUCCESS") echo -e "\033[1;32m[SUCCESS]\033[0m $message" ;;
        "ERROR") echo -e "\033[1;31m[ERROR]\033[0m $message" ;;
    esac
}

check_dependencies() {
    local deps=("qemu-system-x86_64" "wget" "cloud-localds" "qemu-img")
    for dep in "${deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then
            sudo apt update && sudo apt install -y qemu-system cloud-image-utils wget qemu-utils || true
        fi
    done
}

load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    if [[ -f "$config_file" ]]; then source "$config_file"; return 0; fi
    return 1
}

save_vm_config() {
    local config_file="$VM_DIR/$VM_NAME.conf"
    cat > "$config_file" <<EOF
VM_NAME="$VM_NAME"
MEMORY="$MEMORY"
CPUS="$CPUS"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
EOF
}

setup_vm_image() {
    print_status "INFO" "Preparing Image..."
    if [[ ! -f "$IMG_FILE" ]]; then
        wget -q --show-progress https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img -O "$IMG_FILE"
    fi
    qemu-img resize "$IMG_FILE" 20G
    cat > user-data <<EOF
#cloud-config
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    password: $(openssl passwd -6 "$PASSWORD")
EOF
    echo "instance-id: iid-$VM_NAME" > meta-data
    cloud-localds "$SEED_FILE" user-data meta-data
    rm user-data meta-data
}

# --- মূল Ryzen 9 স্টার্ট কমান্ড ---
start_vm() {
    local vm_name=$1
    if load_vm_config "$vm_name"; then
        print_status "SUCCESS" "Starting $vm_name as AMD Ryzen 9 5950X..."
        qemu-system-x86_64 \
            -enable-kvm \
            -m "$MEMORY" \
            -smp "$CPUS",sockets=1,cores="$CPUS",threads=1 \
            -cpu EPYC,vendor=AuthenticAMD,model-id="AMD Ryzen 9 5950X 16-Core Processor",+topoext,+invtsc \
            -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
            -drive "file=$SEED_FILE,format=raw,if=virtio" \
            -netdev user,id=n0,hostfwd=tcp::$SSH_PORT-:22 \
            -device virtio-net-pci,netdev=n0 \
            -nographic -serial mon:stdio
    fi
}

create_new_vm() {
    read -p "Enter VM Name: " VM_NAME
    read -p "Enter Username: " USERNAME
    read -p "Enter Password: " PASSWORD
    read -p "Memory (MB): " MEMORY
    read -p "CPUs (Cores): " CPUS
    read -p "SSH Port: " SSH_PORT
    
    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"
    
    setup_vm_image
    save_vm_config
    print_status "SUCCESS" "VM Created! Now start it from menu."
    sleep 2
}

main_menu() {
    while true; do
        display_header
        echo "1) Create New VM"
        echo "2) Start VM"
        echo "3) Exit"
        read -p "Option: " opt
        case $opt in
            1) create_new_vm ;;
            2) read -p "Enter VM Name to Start: " name; start_vm "$name" ;;
            3) exit 0 ;;
        esac
    done
}

check_dependencies
main_menu

