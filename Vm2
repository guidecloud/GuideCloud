}

# Start VM (With Auto KVM/TCG & Ryzen 9 Branding)
start_vm() {
    local vm_name=$1
    if load_vm_config "$vm_name"; then
        local ACCEL="tcg"
        local CPU_MODEL="max"
        
        if [ -e /dev/kvm ]; then
