#!/bin/bash
set -euo pipefail

# ========================================================
#    GUIDECLOUD PRO VM MANAGER - RYZEN 9 UNIVERSAL
# ========================================================

VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

# কালার কোড
RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
PURPLE='\033[0;35m'
NC='\033[0m'

# ওএস লিস্ট (নতুন ও পুরানো সব ভার্সন)
declare -A OS_LIST=(
    ["1"]="Ubuntu 24.04 LTS (Latest)|https://cloud-images.ubuntu.com/noble/current/noble-server-cloudimg-amd64.img"
    ["2"]="Ubuntu 22.04 LTS (Original)|https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
    ["3"]="Debian 12 (Latest)|https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2"
    ["4"]="Debian 11 (Bullseye)|https://cloud.debian.org/images/cloud/bullseye/latest/debian-11-generic-amd64.qcow2"
    ["5"]="Parrot OS Security|https://download.parrot.sh/parrot/iso/6.1/Parrot-architect-6.1_amd64.iso"
)

display_header() {
    clear
    echo -e "${CYAN}##########################################################${NC}"
    echo -e "${PURPLE}    ______       _     _        _____ _                 _ ${NC}"
    echo -e "${PURPLE}   |  ____|     (_)   | |      / ____| |               | |${NC}"
    echo -e "${PURPLE}   | |  __ _   _ _  __| | ___ | |    | | ___  _   _  __| |${NC}"
    echo -e "${PURPLE}   | | |_ | | | | |/ _\` |/ _ \| |    | |/ _ \| | | |/ _\` |${NC}"
    echo -e "${PURPLE}   | |__| | |_| | | (_| |  __/| |____| | (_) | |_| | (_| |${NC}"
    echo -e "${PURPLE}   |______|\__,_|_|\__,_|\___| \_____|_|\___/ \__,_|\__,_|${NC}"
    echo -e "${CYAN}##########################################################${NC}"
    echo -e "${YELLOW}           RYZEN 9 VM MANAGER - BY GUIDECLOUD${NC}"
    echo -e "${CYAN}##########################################################${NC}"
}

setup_env() {
    # মেমোরি ওভারকমিট এনাবল করা যাতে কম র‍্যামেও বেশি দেখানো যায়
    sudo sysctl -w vm.overcommit_memory=1 2>/dev/null || true
    sudo chmod 666 /dev/kvm 2>/dev/null || true
    if ! command -v qemu-system-x86_64 &> /dev/null; then
        echo -e "${YELLOW}Installing Dependencies...${NC}"
        sudo apt update -qq && sudo apt install -y qemu-kvm cloud-image-utils wget -qq || sudo dnf install -y qemu-kvm cloud-utils-growpart wget -y
    fi
}

create_new_vm() {
    display_header
    echo -e "${GREEN}[CREATE NEW VPS]${NC}"
    echo "1) Ubuntu 24.04  2) Ubuntu 22.04"
    echo "3) Debian 12     4) Debian 11"
    echo "5) Parrot OS"
    read -p "Choose OS [1-5]: " os_choice
    
    SELECTED_OS_DATA=${OS_LIST[$os_choice]}
    OS_NAME=$(echo "$SELECTED_OS_DATA" | cut -d'|' -f1)
    IMG_URL=$(echo "$SELECTED_OS_DATA" | cut -d'|' -f2)

    read -p "VM File Name: " VM_NAME
    read -p "Hostname: " HOSTNAME
    read -p "Username: " USERNAME
    read -p "Password: " PASSWORD
    read -p "Internal RAM (MB) [e.g. 2048]: " MEMORY
    read -p "Show RAM (GB) in VM [e.g. 16]: " SHOW_RAM
    read -p "CPU Cores (Max 7 for Fedora): " CPUS
    read -p "Clock Speed (GHz): " CPU_GHZ
    read -p "Disk Size (e.g. 200G): " DISK_SIZE
    read -p "SSH Port: " SSH_PORT

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"

    if [[ ! -f "$IMG_FILE" ]]; then
        echo -e "${CYAN}Downloading $OS_NAME...${NC}"
        wget -q --show-progress "$IMG_URL" -O "$IMG_FILE"
    fi

    qemu-img resize "$IMG_FILE" "$DISK_SIZE"

    # Cloud-init with Docker Support
    cat > user-data <<EOC
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
packages:
  - curl
  - docker.io
  - docker-compose
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    passwd: $(openssl passwd -6 "$PASSWORD")
runcmd:
  - systemctl enable --now docker
  - usermod -aG docker $USERNAME
chpasswd:
  list: |
    root:$PASSWORD
    $USERNAME:$PASSWORD
  expire: false
EOC
    cloud-localds "$SEED_FILE" user-data
    rm user-data

    cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
MEMORY="$MEMORY"
SHOW_RAM="${SHOW_RAM}G"
CPUS="$CPUS"
CPU_GHZ="$CPU_GHZ"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
USERNAME="$USERNAME"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
    echo -e "${GREEN}Success: $OS_NAME Created!${NC}"
    sleep 2
}

start_vm() {
    display_header
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
    if [ ${#vms[@]} -eq 0 ]; then echo "No VMs!"; return; fi
    
    for i in "${!vms[@]}"; do echo -e "${YELLOW}$((i+1)))${NC} ${vms[$i]}"; done
    read -p "Select VM Number: " idx
    source "$VM_DIR/${vms[$((idx-1))]}.conf"

    # KVM/TCG Auto-Select with Fake RAM Logic
    local ACCEL="tcg"
    local CPU_MODEL="max"
    if [ -e /dev/kvm ] && [ -w /dev/kvm ]; then
        ACCEL="kvm"
        CPU_MODEL="host"
        echo -e "${GREEN}KVM ACCELERATION ACTIVE${NC}"
    fi

    echo -e "${CYAN}Starting $VM_NAME as Ryzen 9 @ $CPU_GHZ GHz with $SHOW_RAM RAM...${NC}"
    
    qemu-system-x86_64 \
        -accel "$ACCEL" \
        -m "$SHOW_RAM",slots=2,maxmem=64G \
        -smp "$CPUS",maxcpus=7 \
        -cpu "$CPU_MODEL",vendor=AuthenticAMD,model_id="AMD Ryzen 9 5950X @ ${CPU_GHZ}GHz" \
        -device virtio-balloon-pci \
        -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
        -drive "file=$SEED_FILE,format=raw,if=virtio" \
        -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
        -device virtio-net-pci,netdev=n1 \
        -nographic -serial mon:stdio
}

# Main Loop
setup_env
while true; do
    display_header
    echo -e "1) Create VM  2) Start VM  3) Delete VM  0) Exit"
    read -p "Choice: " opt
    case $opt in
        1) create_new_vm ;;
        2) start_vm ;;
        3) read -p "Name: " d; rm -f "$VM_DIR/$d"* && echo "Deleted!"; sleep 1 ;;
        0) exit 0 ;;
    esac
done

