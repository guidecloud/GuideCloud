#!/bin/bash
set -euo pipefail

# ========================================================
# GUIDECLOUD PRO VM MANAGER (RYZEN 9 VERSION) - UPDATED
# ========================================================

VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

# OS অপশনগুলোর তালিকা
declare -A OS_LIST=(
    ["1"]="Ubuntu 22.04|https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
    ["2"]="Debian 12|https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2"
    ["3"]="Parrot OS|https://download.parrot.sh/parrot/iso/6.1/Parrot-architect-6.1_amd64.iso"
)

display_header() {
    clear
    echo "=========================================================="
    echo "    RYZEN 9 VM MANAGER - ADVANCED CONTROL (ENG)"
    echo "=========================================================="
}

list_vms() {
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
    echo "Total VMs found: ${#vms[@]}"
    if [ ${#vms[@]} -eq 0 ]; then
        echo "No VMs found!"
        return 1
    fi
    echo "--------------------------------"
    for i in "${!vms[@]}"; do
        echo "$((i+1))) ${vms[$i]}"
    done
    echo "--------------------------------"
    return 0
}

get_vm_by_index() {
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
    read -p "Enter VM number from the list: " idx
    if [[ "$idx" =~ ^[0-9]+$ ]] && [ "$idx" -le "${#vms[@]}" ] && [ "$idx" -gt 0 ]; then
        SELECTED_VM="${vms[$((idx-1))]}"
        source "$VM_DIR/$SELECTED_VM.conf"
        return 0
    else
        echo "Error: Invalid selection!"
        return 1
    fi
}

create_new_vm() {
    display_header
    echo "[CREATE NEW VM]"
    
    # OS বেছে নেওয়ার মেনু
    echo "Select OS:"
    echo "1) Ubuntu 22.04"
    echo "2) Debian 12"
    echo "3) Parrot OS"
    read -p "Choice [1-3]: " os_choice
    
    SELECTED_OS_DATA=${OS_LIST[$os_choice]}
    IMG_URL=$(echo $SELECTED_OS_DATA | cut -d'|' -f2)

    read -p "1. VM File Name (e.g. vps1): " VM_NAME
    read -p "2. Hostname (e.g. guidecloud): " HOSTNAME
    read -p "3. Username (e.g. admin): " USERNAME
    read -p "4. Password: " PASSWORD
    read -p "5. RAM (MB) [e.g. 2048]: " MEMORY
    read -p "6. CPU Cores [e.g. 2]: " CPUS
    read -p "7. CPU Clock Speed (GHz) [e.g. 3.8]: " CPU_GHZ
    read -p "8. Disk Size (e.g. 200G): " DISK_SIZE
    read -p "9. SSH Port [e.g. 3000]: " SSH_PORT

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"

    if [[ ! -f "$IMG_FILE" ]]; then
        echo "Downloading OS Image..."
        wget -q --show-progress "$IMG_URL" -O "$IMG_FILE"
    fi

    echo "Configuring Disk..."
    qemu-img resize "$IMG_FILE" "$DISK_SIZE"

    # Cloud-init (এখানেই ডকার ইন্সটল কমান্ড যোগ করা হয়েছে)
    cat > user-data <<EOC
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    passwd: $(openssl passwd -6 "$PASSWORD")
packages:
  - docker.io
  - docker-compose
  - curl
runcmd:
  - systemctl enable --now docker
chpasswd:
  list: |
    root:$PASSWORD
    $USERNAME:$PASSWORD
  expire: false
EOC
    echo "instance-id: iid-$VM_NAME" > meta-data
    cloud-localds "$SEED_FILE" user-data meta-data
    rm user-data meta-data

    cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
MEMORY="$MEMORY"
CPUS="$CPUS"
CPU_GHZ="$CPU_GHZ"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
    echo "Success: VM Created with Docker Support!"
    sleep 2
}

start_vm() {
    display_header
    if list_vms; then
        if get_vm_by_index; then
            # Port check
            if ss -tln | grep -q ":$SSH_PORT "; then
                echo "ERROR: Port $SSH_PORT is busy!"
                read -p "Press Enter..."
                return
            fi

            echo "Starting $VM_NAME with Ryzen 9 @ $CPU_GHZ GHz..."
            
            # KVM চেক করে চালানো
            ACCEL="tcg"
            CPU_MODEL="max"
            if [ -e /dev/kvm ]; then
                ACCEL="kvm"
                CPU_MODEL="host"
            fi

            qemu-system-x86_64 \
                -accel "$ACCEL" \
                -m "$MEMORY" \
                -smp "$CPUS" \
                -cpu "$CPU_MODEL",vendor=AuthenticAMD,model_id="AMD Ryzen 9 5950X 16-Core Processor @ ${CPU_GHZ}GHz" \
                -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
                -drive "file=$SEED_FILE,format=raw,if=virtio" \
                -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
                -device virtio-net-pci,netdev=n1 \
                -nographic -serial mon:stdio
        fi
    fi
}

# (বাকি এডিট এবং ডিলিট অপশন আপনার অরিজিনাল কোড থেকেই থাকছে)
while true; do
    display_header
    echo "1) Create New VM"
    echo "2) Show VM List"
    echo "3) Start VM"
    echo "4) Delete VM"
    echo "0) Exit"
    read -p "Select: " opt
    case $opt in
        1) create_new_vm ;;
        2) list_vms; read -p "Press Enter..." ;;
        3) start_vm ;;
        4) if list_vms; then if get_vm_by_index; then rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$SELECTED_VM.conf"; echo "Deleted!"; sleep 2; fi; fi ;;
        0) exit 0 ;;
    esac
done
